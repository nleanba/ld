@base <http://example.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix r2h: <http://rdf2h.github.io/2015/rdf2h#> .
@prefix dc: <http://purl.org/dc/elements/1.1/>.
@prefix s: <http://schema.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix zzm: <http://zz2h.zazukoians.org/modes/> .
@prefix zz2h: <http://zz2h.zazukoians.org/ontology/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix r2hp: <http://rdf2h.github.io/2015/rdf2h-points/> .

<header> a r2h:Matcher ;
  r2h:template [
    r2h:context r2h:Default;
    r2h:mustache '''
      <div style="max-width: 1200px;margin:10px 30px">
      <h2 style="font-size: 1.3em">{{.}}</h2>
      <h1 style="font-size: 3em">{{s:name}}</h1>
      </div>
      {{{:continue}}}'''
  ];
  r2h:before <image>.

<image> a r2h:Matcher ;
r2h:triplePattern [
    r2h:subject r2h:this;
    r2h:predicate s:image;
  ];
  r2h:template [
    r2h:context r2h:Default;
    r2h:mustache '''
      <img src="{{s:image}}" alt="Image of Train" style="max-height:250px;max-width: 1200px;margin:10px 30px" >
      {{{:continue}}}'''
  ];
  r2h:before <description>.

<description> a r2h:Matcher ;
r2h:triplePattern [
    r2h:subject r2h:this;
    r2h:predicate s:description;
  ];
  r2h:template [
    r2h:context r2h:Default;
    r2h:mustache '''
      <div style="max-width: 1200px; margin:10px 30px">
      <p style="font-size: 1.3em">{{s:description}}</p>
      </div>
      {{{:continue}}}'''
  ];
  r2h:before <table-start>.

<table-start> a r2h:Matcher ;
  r2h:template [
    r2h:context r2h:Default;
    r2h:mustache '''
    <div style="max-width: 1200px;margin:10px 30px;font-size: 1.3em;text-decoration: none"><table width="100%>
    {{{:continue}}}'''
  ];
  r2h:before <manufacturer>.

<manufacturer> a r2h:Matcher ;
r2h:triplePattern [
    r2h:subject r2h:this;
    r2h:predicate s:manufacturer;
  ];
  r2h:template [
    r2h:context r2h:Default;
    r2h:mustache '''
      <div style="max-width: 1200px;margin:10px 30px;"><table width="100%>
      <tr><td width="35%">Hersteller:</td><td width="65%"><a href="{{s:manufacturer}}">{{s:manufacturer}}</a></td></tr>
      {{{:continue}}}'''
  ];
  r2h:before <table-end>.

<table-end> a r2h:Matcher ;
  r2h:template [
    r2h:context r2h:Default;
    r2h:mustache '''</table></div>'''
  ].
